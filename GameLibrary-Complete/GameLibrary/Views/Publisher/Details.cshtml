@model GameDataLibrary.Models.PublisherModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Publisher</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            <h3>
            @Html.DisplayFor(model => model.Name)
            </h3>
        </dd>
    </dl>
    @if (Model.BoardGames != null)
    {
       <dl class="row">
        @foreach (var b in Model.BoardGames)
        {
            <dt class = "col-sm-2">
                <a asp-route-id="@b.Id" asp-controller="BoardGame" asp-action="Details">@b.Name</a>
            </dt>
             <dd class = "col-sm-10">
                    <img class="rounded-circle" src="@b.ImageURL" alt="@b.Name"
                 style="max-width: 150px">     
            </dd>    
            
        }
        </dl>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
